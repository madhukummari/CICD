#  Configure Nginx for React

server {
    listen 80;
    server_name your-server-ip;  # Change to your domain if using one

    root /var/www/react-app/build;  # Path where Jenkins will place the React build
    index index.html;
    
    location / {
        try_files $uri /index.html;
    }

    # Caching and gzip compression for better performance
    location ~* \.(?:ico|css|js|gif|jpe?g|png|woff2?|eot|ttf|svg)$ {
        expires 6M;
        access_log off;
        add_header Cache-Control "public";
    }

    error_page 404 /index.html;
}
